@model Reserva_Espectaculo.ViewModels.Login

@{
    ViewData["Title"] = "Iniciar Sesion";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="IniciarSesion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div classs="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div classs="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div classs="form-group">
                <label asp-for="Recordarme" class="form-check-label"></label>
                <input asp-for="Recordarme" class="form-check-label" />
                <span asp-validation-for="Recordarme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>

        </form>

        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Registrar">Si no tenés usuario registrarse aquí</a>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }





